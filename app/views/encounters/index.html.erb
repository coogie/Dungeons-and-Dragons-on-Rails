<h1>
  Encounters
  <%= link_to 'New encounter', new_encounter_path, class: "btn" %>
</h1>

<ul id="encounters-list" class="cf">
  <% @encounters.each do |encounter| %>
    <li>
      <div class="name"><%= encounter.name %></div>
      <div class="npcs"><%= simple_format encounter.explain_npcs %></div>
      <div class="actions">
        <%= link_to 'Show', encounter, class: "btn" %>
        <%= link_to 'Edit', edit_encounter_path(encounter), class: "btn" %>
        <%= link_to 'Destroy', encounter, confirm: 'Are you sure?',
          method: :delete, class: "btn btn-danger" %>
        <%= link_to 'Roll initiative',
          initiative_path(:encounter_id => encounter.id),
          class: "btn btn-warning" %>
      </div>
    </li>
  <% end %>
</ul>
