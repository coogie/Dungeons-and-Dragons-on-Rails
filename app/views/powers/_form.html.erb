<%= simple_form_for(@power) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :requirement %>
    <%= f.input :trigger %>
    <%= f.input :attack %>
    <%= f.input :hit %>
    <%= f.input :miss %>
    <%= f.input :effect %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
